    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "server.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "SERVER_CONFIG": "default_config.py",
                "FLASK_RUN_PORT":"80"
            },
            "args": [
                "run",
                "--no-debugger",
                "--host=192.168.1.143"
                //"--no-reload"
            ],
            "jinja": true,
            "preLaunchTask":"Generate requirements"
        }
    ]
}